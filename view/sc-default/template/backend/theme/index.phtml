                <?php if(in_array($name, $registeredThemes)): ?>
                    <?php if($name !== $options->getFrontendThemeName()): ?>

                        <a href="">Disable</a> |&nbsp;<a href="">Settings</a> |&nbsp;<a href="">Set default</a>
