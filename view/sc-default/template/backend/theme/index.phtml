    <div class="col-lg-12">
        <div class="theme-item">
            <?php if(isset($item['screenshot'])): ?>

                <img class="theme-screenshot" src="<?php echo $this->basePath($item['screenshot']) ?>" alt="<?php echo sprintf($this->translate('Screenshot for %s theme'), $displayName) ?>" title="<?php echo sprintf($this->translate('Screenshot for %s theme'), $displayName) ?>" />
            <?php endif ?>

            <div class="theme-info">
                <h3><?php echo $displayName ?></h3>

                <?php if(isset($item['description'])): ?>

                <p><?php echo $this->translate($item['description']) ?></p>
